extends layout

block content
    div.row
        div.col-md-6
            h3 Tell us about yourself
            div#books.list-group
            form(action='/tellus', method='POST')
                h4 Your name:
                input.form-control(type='text', placeholder='Your Name', name='name')
                h4 Your interests:
                input.form-control(type='text', placeholder='Interests', name='interests')
                button.btn.btn-default(type='submit') Submit